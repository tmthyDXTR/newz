<Application x:Class="Newz.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
    <!-- Global styles to set the default font for UI elements -->
    <Style TargetType="{x:Type Control}">
      <Setter Property="FontFamily" Value="Ubuntu Mono"/>
    </Style>
    <Style TargetType="{x:Type TextBlock}">
      <Setter Property="FontFamily" Value="Ubuntu Mono"/>
    </Style>
    
    <!-- Light Mode Resources -->
    <SolidColorBrush x:Key="LightModeBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="LightModeText" Color="Black"/>
    
    <!-- Dark Mode Resources -->
    <SolidColorBrush x:Key="DarkModeBackground" Color="#333333"/>
    <SolidColorBrush x:Key="DarkModeText" Color="#F5F5DC"/> <!-- Beige text -->
    
    <!-- Default to Light Mode -->
    <ImageBrush x:Key="DefaultArticleBackground" ImageSource="/img/beige-paper-texture.jpg" Stretch="UniformToFill" TileMode="Tile"/>
    
    <!-- ...existing resource dictionaries... -->
  </Application.Resources>
</Application>
